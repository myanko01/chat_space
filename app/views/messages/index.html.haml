.chatspace
  .chat-side
    .chat-side__user
      %p
        = current_user.name
      .chat-side__user__actions
        = link_to new_group_path do
          = fa_icon "pencil-square-o"
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog'
    .chat-side__groups--name
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          = group.name
          .stat
            まだメッセージはありません。

  .chat-main
    .chat-main__header
      .chat-main__header--left
        %h2 sample
        %p.group-members Members:name1
      .chat-main__header--right
        %a.edit-botton Edit

    .chat-main__body
      %ul.chat-contents
        %li.chat-content
          .chat-content__header
            .chat-content__name
              %p name1
            .chat-content__time
              %p 2019/02/09 21:59:59
            .chat-content__message
              %p とくになし
        %li.chat-content
          .chat-content__header
            .chat-content__name
              %p name1
            .chat-content__time
              %p 2019/02/09 22:00:01
            .chat-content__message
              %p とくになし

    .chat-main__footer
      .chat-main__footer__messagebody
        .chat-main__footer__messagebody__text
          %textarea{ placeholder: 'type a message' }
        .chat-main__messagebody__image
          = fa_icon "picture-o"
      .chat-main__footer__send
        %a.send-btn Send
